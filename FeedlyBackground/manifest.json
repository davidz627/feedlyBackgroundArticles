{
  "name": "Feedly Background Articles",
  "author": "David Zhu",
  "version": "0.2.0",
  "description": "Opens Feedly articles in a background tab on custom hotkey",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.feedly.com/*"
      ],
      "run_at": "document_idle",
      "js": [
        "content.js",
        "jquery-3.5.1.min.js"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "transparent_feedly_icon.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": [
    "storage"
  ],
  "manifest_version": 2
}